# API Configuration
# Base URL for the Laravel backend API
NEXT_PUBLIC_API_URL=https://api.example.com

# Optional: API version (defaults to v1)
NEXT_PUBLIC_API_VERSION=v1

# Cache Control (for testing)
# Set to 'false' to disable all API caching (useful for development/testing)
# Set to 'true' or leave empty to enable caching (recommended for production)
NEXT_PUBLIC_ENABLE_API_CACHE=true

# Multi-tenancy Configuration
# Root domain for tenant subdomains (defaults to localhost:3000)
# Examples:
#   - For production: nashra.website
#   - For development: localhost:3000
# Tenants on this domain will be resolved by subdomain only (e.g., "mahmoud" from mahmoud.nashra.website)
# Custom domains will be resolved by full hostname (e.g., "msgpilot.com" or "mahmoud.msgpilot.com")
NEXT_PUBLIC_ROOT_DOMAIN=nashra.website
